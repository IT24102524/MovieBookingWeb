<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Online Movie Ticket Reservation</display-name>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>main.java.com.movieticket.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>main.java.com.movieticket.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- User Servlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>main.java.com.movieticket.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <!-- Movie Servlet -->
    <servlet>
        <servlet-name>MovieServlet</servlet-name>
        <servlet-class>main.java.com.movieticket.servlet.MovieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MovieServlet</servlet-name>
        <url-pattern>/movies</url-pattern>
    </servlet-mapping>

    <!-- Showtime Servlet -->
    <servlet>
        <servlet-name>ShowtimeServlet</servlet-name>
        <servlet-class>main.java.com.movieticket.servlet.ShowtimeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowtimeServlet</servlet-name>
        <url-pattern>/showtimes</url-pattern>
    </servlet-mapping>

    <!-- Seat Servlet -->
    <servlet>
        <servlet-name>SeatServlet</servlet-name>
        <servlet-class>main.java.com.movieticket.servlet.SeatServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SeatServlet</servlet-name>
        <url-pattern>/seats</url-pattern>
    </servlet-mapping>

    <!-- Review Servlet -->
    <servlet>
        <servlet-name>ReviewServlet</servlet-name>
        <servlet-class>main.java.com.movieticket.servlet.ReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReviewServlet</servlet-name>
        <url-pattern>/reviews</url-pattern>
    </servlet-mapping>

    <!-- Booking Servlet -->
    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>main.java.com.movieticket.servlet.BookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingServlet</servlet-name>
        <url-pattern>/bookings</url-pattern>
    </servlet-mapping>

    <!-- Download Receipt Servlet -->
    <servlet>
        <servlet-name>DownloadServlet</servlet-name>
        <servlet-class>main.java.com.movieticket.servlet.DownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadServlet</servlet-name>
        <url-pattern>/downloadReceipt</url-pattern>
    </servlet-mapping>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
